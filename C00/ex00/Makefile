#==============================================================================#
## MEGAPHONE MAKEFILE ðŸ“£ 
#==============================================================================#

#==============================================================================#
## VARIABLES
MAKEFLAGS += --no-print-directory

NAME                    =       megaphone
CC                      =       c++
CFLAGS                  =       -Wall -Wextra -Werror -std=c++98

#==============================================================================#
## DIRECTORIES
DIR_SRC                 =       ./
DIR_OBJ                 =       ./obj/

#==============================================================================#
## FILES
SRCS                    =       $(DIR_SRC)megaphone.cpp

OBJS                    =       $(patsubst $(DIR_SRC)%.cpp,$(DIR_OBJ)%.o,$(SRCS))
DEPS                    =       $(OBJS:.o=.d)

TOTAL_FILES             =       $(words $(SRCS))
COMPILED_FILES          =       0
DOTS                    =       $(shell printf ".%.0s" $(shell seq $(TOTAL_FILES)))

#==============================================================================#
## RULES
all:                            $(DIR_OBJ) $(NAME)
				@echo "$(GREEN)ðŸŽ‰ Build complete! $(NAME) has been created. ðŸŽ‰$(NC)"

$(NAME):                        $(OBJS)
				@echo "$(YELLOW)ðŸ”— Linking objects into executable...$(NC)"
				@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
				@echo "$(GREEN)âœ… Executable $(NAME) created successfully! ðŸš€$(NC)"

$(DIR_OBJ):
				@mkdir -p $(DIR_OBJ)
				@echo "$(CYAN)ðŸ“ Created objects directory.$(NC)"

$(DIR_OBJ)%.o: $(DIR_SRC)%.cpp
				@$(eval COMPILED_FILES=$(shell echo $$(($(COMPILED_FILES) + 1))))
				@DOTS_LEFT=$(shell echo "$(DOTS)" | cut -c$(COMPILED_FILES)-) ; \
				printf "\r$(CYAN)ðŸ”„ Compiling: $< $(COMPILED_FILES)/$(TOTAL_FILES)$(NC) ðŸŸ¡%s"
				@$(CC) $(CFLAGS) -c $< -o $@
				@if [ $(COMPILED_FILES) -eq $(TOTAL_FILES) ]; then echo; fi

clean:
				@echo "$(YELLOW)ðŸ§¹ Cleaning object files...$(NC)"
				@$(RM) -r $(DIR_OBJ)
				@echo "$(GREEN)âœ¨ Object files cleaned!$(NC)"

fclean:                         clean
				@echo "$(YELLOW)ðŸ—‘ï¸ Cleaning $(NAME) executable...$(NC)"
				@$(RM) $(NAME)
				@echo "$(GREEN)ðŸ§¼ Executable cleaned!$(NC)"

re:                             fclean all

help:
				@echo "$(CYAN)ðŸ“š Available targets:$(NC)"
				@echo "$(GREEN)  make$(NC)        - Build the phonebook program"
				@echo "$(GREEN)  make clean$(NC)  - Remove object files"
				@echo "$(GREEN)  make fclean$(NC) - Remove object files and executable"
				@echo "$(GREEN)  make re$(NC)     - Rebuild from scratch"
				@echo "$(GREEN)  make help$(NC)   - Display this help message"
				
#==============================================================================#
## COLORS
GREEN = \033[0;32m
CYAN = \033[0;36m
YELLOW = \033[0;33m
RED = \033[0;31m
NC = \033[0m

.PHONY:	all clean fclean re help